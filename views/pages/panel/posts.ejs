<div class="w-100">
    <div class="row">

        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <% if (success_message){ %>
                        <div class="row">
                            <p class="alert alert-info"><%=success_message%></p>
                        </div>
                    <% } %>
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title fw-semibold mb-4">آگهی های من</h5>
                        <p>
                            <a href="create" class="btn btn-info">ایجاد آگهی جدید</a>
                        </p>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">شناسه</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">عنوان</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">توضیحات</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">تاریخ انتشار</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">مدیریت</h6>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if (posts.length === 0){ %>
                                <tr>
                                    <th colspan="5">
                                        <p class="alert alert-warning">آگهی در سیستم ثبت نشده</p>
                                    </th>
                                </tr>
                            <% }else { %>
                                <% posts.forEach(posts=>{ %>
                                    <tr>
                                        <td class="border-bottom-0"><h6 class="fw-semibold mb-0"><%= posts._id %></h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1"><%= posts.title %></h6>

                                        </td>
                                        <td class="border-bottom-0">
                                            <div>
                                                <%- posts.content %>
                                            </div>
                                        </td>
                                        <td class="border-bottom-0">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class=" rounded-3 fw-semibold"><%= moment(posts.createdAt).locale("fa").format("jDD jMMMM jYYYY") %></span>
                                            </div>
                                        </td>
                                        <td class="border-bottom-0">
                                            <a href="" class="btn btn-danger">
                                                حذف
                                            </a>
                                            <a href="<%= posts._id %>" class="btn btn-success">
                                                نمایش کامل آگهی
                                            </a>
                                        </td>

                                    </tr>
                                <% }) %>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>